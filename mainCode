
#include <iostream>
#include <string>
using namespace std;


void pageReplacement(int freeFrames, int refrenceString[], string algorithm) {
    int freeFrameNum=freeFrames;
    int pageFaults = 0;
    int refrenceStringPtr = 0;
    int frames[freeFrameNum];
    int framesPtr = 0;
    int refrenceStringLength = 7;
    cout<<refrenceStringLength<<endl;

    
    
    
    if (algorithm == "FIFO") {
        
        //initialize all frames with -1
        for (int i = 0; i < freeFrameNum; ++i) {
            frames[i] = -1;
        }
        
        
        
        for (int j = refrenceStringPtr; j < refrenceStringLength; ++j) {
            
            
                //check for page fault
                bool pageFaultOccured=true;	
                for (int i = 0; i < freeFrameNum; ++i) {
                if (frames[i] == refrenceString[j]) {
                    cout<<"current page  = "<<refrenceString[0]<<endl;
                    pageFaultOccured=false;
                    break;
                    }
                }
                
                if(pageFaultOccured==false){
                    continue;
                }

                
                
                
                //Page fault 
                cout<<"current page  = "<<refrenceString[j]<<endl;
                cout<<"Page fault"<<endl;
                frames[framesPtr] = refrenceString[j];
                ++framesPtr;
                if (framesPtr > freeFrameNum - 1) {
                framesPtr = 0;
                }
                ++pageFaults;
                
            }
        } 
        cout <<pageFaults;
    }
   

int main() {

    int frameNumber = 4;
    int refrenceString[7]={7, 0, 1, 2, 0, 1,9};
    string algo = "FIFO";


    pageReplacement(frameNumber, refrenceString, algo);
   

    return 0;
}
